<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BinarAndroidChapter4Challenge" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text.Base" parent="Theme.BinarAndroidChapter4Challenge">
        <item name="android:fontFamily">@font/comic_neue_bold</item>
        <item name="android:textAlignment">center</item>
    </style>
    
    <style name="Text.Header" parent="Text.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_31sdp</item>
        <item name="android:textSize">@dimen/_26ssp</item>
    </style>

    <style name="Text.Player" parent="Text.Base">
        <item name="android:textColor">@color/light_blue_600</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">@dimen/_77sdp</item>
        <item name="android:layout_height">@dimen/_23sdp</item>
        <item name="android:layout_marginTop">@dimen/_58sdp</item>
    </style>

    <style name="Base.Button" parent="Theme.BinarAndroidChapter4Challenge">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_77sdp</item>
    </style>

    <style name="Base.Icon" parent="Theme.BinarAndroidChapter4Challenge">
        <item name="android:tint">@color/black</item>
    </style>
</resources>